<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="220" d:DesignHeight="240"
		Width="220" Height="240"
        x:Class="Projekt2.Views.NowaPlyta"
        Title="NowaPlyta">
	<Grid RowDefinitions="1*,1*,1*" ColumnDefinitions="1*,1*">
		<TextBlock VerticalAlignment="Center" HorizontalAlignment="Right">NazwaPłyty : </TextBlock>
		<TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1">Ilość : </TextBlock>
		<TextBox x:Name="NazwaPlyty" Grid.Column="1" VerticalAlignment="Center" ></TextBox>
		<TextBox x:Name="Ilosc" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"></TextBox>
		<Button  Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Dodaj_Click">Dodaj</Button>
	</Grid>
</Window>
